    DPEAButton:
        text: '4'
        id: four
        center_x: root.center_x - 100
        center_y: root.center_y - 40
        color: 0.019, 0.337, 1, 1
        size: 80, 80
        on_press: root.setColor(4)

    DPEAButton:
        text: '5'
