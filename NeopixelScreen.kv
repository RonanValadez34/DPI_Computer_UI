    DPEAButton:
        text: 'Del'
        id: backspace
        center_x: root.center_x + 300
        center_y: root.center_y - 240
        color: 0.019, 0.337, 1, 1
        size: 80, 80
        on_press: root.removeColor()

    # label to display current red value
    Label:
        id: red_value
        text: 'R1: ' + root.neopixel0_redValue
        font_size: 25
        center_x: root.width * 0.4
        y: root.height * 0.1
        color: 0.0, 0.0, 0.0, 1

    # label to display current green value
