<NeopixelScreen>:
    name: 'Neopixel'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        # Quit button
        size: 100, 100
        center_x: root.width * 0.95
        center_y: root.height * 0.95
        background_color: 0,0,0,0
        color: 0.035, 0.152, 0.725, 1
        text: "Quit"
        on_press: root.exit_program()


    DPEAButton:
        #Go back button
        size: 100, 100
        center_x: root.width * 0.95
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Go back"
        on_press: root.transition_back()

    DPEAButton:
        # Button to Select Neopixel 0
        id: neopixel0
        size: 100, 100
        center_x: root.width * 0.05
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Neopixel 0"
        on_press: root.selectNeopixel0()

    DPEAButton:
        # Button to Select Neopixel 1
        id: neopixel1
        size: 100, 100
        center_x: root.width * 0.15
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Neopixel 1"
        on_press: root.selectNeopixel1()



    DPEAButton:
        #set Number of Neopixels in the strip
        id: num_neopixels
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Number of Neopixels"
        on_press: root.selectNumberOfNeopixels()

    DPEAButton:
        # Button to set index
        id: index
        size: 100, 100
        center_x: root.width * 0.45
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Index"
        on_press: root.selectIndex()

    DPEAButton:
        # Button to set neopixel color
        size: 100, 100
        center_x: root.width * 0.55
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Set Neopixel Color"
        on_press: root.setIndividualNeopixel()


    DPEAButton:
        # Button to turn off neopixels
        size: 100, 100
        center_x: root.width * 0.35
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Off"
        on_press: root.setNeopixelsoff()

    DPEAButton:
        #Set the first red value
        id: set_red
        size: 100, 100
        center_x: root.width * 0.65
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Set Red Value"
        on_press: root.selectRed1()

    DPEAButton:
        #set green value
        id: set_green
        size: 100, 100
        center_x: root.width * 0.75
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Set Green Value"
        on_press: root.selectGreen1()

    DPEAButton:
        #set blue value
        id: set_blue
        size: 100, 100
        center_x: root.width * 0.85
        center_y: root.height * 0.8
        color: 0.035, 0.152, 0.725, 1
        text: "Set Blue Value"
        on_press: root.selectBlue1()




# Keyboard for RGB values
    DPEAButton:
        text: '1'
        id: one
        center_x: root.center_x + 300
        center_y: root.center_y + 60
        color: 0.019, 0.337, 1, 1
        size: 80, 80
        on_press: root.setColor(1)

    DPEAButton:
        text: '2'
